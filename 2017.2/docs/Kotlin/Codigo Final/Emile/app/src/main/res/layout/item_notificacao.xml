<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_notificacao"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="200dp"
    android:background="@color/white"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp">


    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_professor"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Renato Novais" />

        <TextView
            android:id="@+id/txt_grupo"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_mensagem"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:text="Todos Os Alunoss" />

        <TextView
            android:id="@+id/txt_mensagem"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:textColor="@color/primary_text"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txt_grupo"
            android:layout_alignLeft="@+id/txt_professor"
            android:layout_alignRight="@+id/txt_grupo"
            android:layout_alignStart="@+id/txt_professor"
            android:layout_below="@+id/txt_professor"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:text="@string/sobre_emile" />

        <TextView
            android:id="@+id/txt_data"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txt_mensagem"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/txt_mensagem"
            android:layout_marginTop="10dp"
            android:ems="12"
            android:inputType="date"
            android:text="13/01/2018"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

